<div>
  <div>
    <h1>
      <%= @the_board.name %>
    </h1>

<hr>

  <h2> Add a new post </h2>

  <form action="/insert_post" method="post">
      <div>
        <label for="board_id"></label>
        <input type="hidden" id="board_id" name="query_board_id" value = <%= @the_board.id %>>
      </div>
      
      <div>
        <label for="title_box">Title</label>
        <input type="text" id="title_box" name="query_title">
      </div>

      <div>
        <label for="body_box">Body</label>
        <input tpye="text" id="body_box", name="query_body" required="TRUE">
      </div>

      <div>
        <label for="expire_box">Expires on</label>
        <input type="date" id="expire_box", name="query_expires_on" placeholder=<%= Date.today %>>
      </div>

      <button>
        Add post
      </button>
  </form>

<hr>

<div>
  <div>
    <h2>Active posts</h2>

    <div>
      <table border="1">
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th>Posted on</th>
          <th>Expires on</th>
        </tr>

        <% @active_posts.each do |a_post| %>
        <tr>
          <td>
            <%= a_post.title %>
          </td>

          <td>
            <%= a_post.body %>
          </td>

          <td>
            <%= a_post.created_at.strftime("%b %e, %Y") %>
          </td>

          <td>
            <%= a_post.expires_on.strftime("%b %e, %Y") %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
  
  <div>
    <h2>Expired posts</h2>

    <div>
      <table border="1">
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th>Posted on</th>
          <th>Expired on</th>
        </tr>

        <% @expired_posts.each do |a_post| %>
        <tr>
          <td>
            <%= a_post.title %>
          </td>

          <td>
            <%= a_post.body %>
          </td>

          <td>
            <%= time_ago_in_words(a_post.created_at) %> ago
          </td>

          <td>
            <%= a_post.expires_on %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
